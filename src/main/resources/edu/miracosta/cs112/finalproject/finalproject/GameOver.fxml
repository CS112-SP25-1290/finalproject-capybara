<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.*?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.miracosta.cs112.finalproject.finalproject.Controllers.GameOverController"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: black;">

    <!-- Score (top right) -->
    <Label fx:id="scoreLabel"
           layoutX="520.0" layoutY="40.0"
           text="Score: 0"
           textFill="white"
           style="-fx-font-size: 18px;" />

    <!-- High Score (top left) -->
    <Label fx:id="highScoreLabel"
           layoutX="60.0" layoutY="40.0"
           text="High Score: 0"
           textFill="gold"
           style="-fx-font-size: 18px;" />

    <!-- Center "ACK ACK Game Over" -->
    <Label layoutX="310.0" layoutY="220.0"
           text="ACK! ACK!"
           textFill="red"
           style="-fx-font-size: 36px; -fx-font-weight: bold;"
           textAlignment="center" />

    <Label layoutX="300.0" layoutY="260.0"
           text="Game Over"
           textFill="red"
           style="-fx-font-size: 36px; -fx-font-weight: bold;"
           textAlignment="center" />

    <TextField fx:id="textField"
               layoutX="290.0"
               layoutY="310.0"
               prefWidth="220.0"
               promptText="Enter your name"
               style="-fx-font-size: 16px;" />

    <HBox layoutX="150.0" layoutY="500.0" spacing="20.0">
    <!-- Main Menu Button (lower left) -->
    <Button fx:id="mainMenuButton"
            text="Main Menu"
            prefWidth="150" prefHeight="40"
            onAction="#handleMainMenu" />

    <!-- Play Again Button (lower right, under Game Over) -->
    <Button fx:id="playAgainButton"
            text="Play Again"
            prefWidth="150" prefHeight="40"
            onAction="#handlePlayAgain" />

    <Button fx:id="saveScoreButton"

            text="Save Score"
            prefWidth="150" prefHeight="40"
            onAction="#handlePlayAgain" />
    </HBox>





</AnchorPane>