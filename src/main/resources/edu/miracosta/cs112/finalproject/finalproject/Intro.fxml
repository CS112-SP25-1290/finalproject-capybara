<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="edu.miracosta.cs112.finalproject.finalproject.Controllers.IntroController"
           style="-fx-background-color: black;">

    <VBox fx:id="scrollContainer" alignment="CENTER" spacing="20">
        <padding>
            <Insets top="600.0" bottom="20.0" left="40.0" right="40.0"/>
        </padding>

        <Label text="In the year 2125 A.D. in the MilkyWay Galaxy far, far away..." textFill="deepskyblue">
            <font>
                <Font name="Arial" size="24"/>
            </font>
        </Label>

        <Label text="THE SPACE INVASION BEGINS..." textFill="yellow">
            <font>
                <Font name="Arial Black" size="36"/>
            </font>
        </Label>

        <Label text="Elon Musk has achieved immortality and now sets his sights on Mars "
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="leading an expedition to strip resources from the red planet. As the "
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="Space X brigade makes contact with drills primed for harvesting minerals, "
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="chaos ensues. Martian fleets erupt from beneath the planet's surface and lay "
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="siege to Elon Musk's mothership and X-fighters. You, the last star pilot of the "
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="Space X brigade, must fight your way throughwaves of Martians to survive and return"
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
        <Label text="safely to humanity."
               alignment="CENTER"
               textFill="yellow"
               wrapText="true">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>
    </VBox>

    <Button fx:id="skipButton"
            text="Skip"
            onAction="#handleSkipButton"
            style="-fx-font-size: 18px; -fx-background-color: darkgray; -fx-text-fill: black;"
            StackPane.alignment="BOTTOM_RIGHT"/>
</StackPane>